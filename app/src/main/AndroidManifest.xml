<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.utility.adapters">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Adapters"
        tools:ignore="AllowBackup">

        <activity
            android:name="com.utility.adapters.MenuActivity"
            android:exported="true"
            android:label="SingleAdapter">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.utility.adapters.examples.simple.SimpleActivity"
            android:label="SingleAdapter: Simple" />
        <activity
            android:name="com.utility.adapters.examples.listener.ListenerActivity"
            android:label="SingleAdapter: OnClickListener" />
        <activity
            android:name="com.utility.adapters.examples.diff_util.DiffUtilActivity"
            android:label="SingleAdapter: DiffUtil" />
        <activity
            android:name="com.utility.adapters.examples.progress.ProgressActivity"
            android:label="SingleAdapter: Progress" />

    </application>

</manifest>